<div class="container">

  <div class="row">
    <div class="col-6 mt-3">
      <h2>Detail du Service </h2>

      <p>Titre : <strong><%= @service.title %></strong></p>
      <p>Prix : <strong><%= @service.price %></strong></p>
      <p>Description : <strong><%= @service.description %></strong></p>

      <div class="row">
        <div class="col-md-2"><%= link_to "RÃ©server", enterprise_get_slots_path(@service.enterprise_id, @service), class: "btn btn-primary" %></div>
        <div class="col-md-2">
          <% if @enterprise.user_id == current_user.id %>
            <p> <%= link_to "MODIFIER", edit_enterprise_service_path(@service.enterprise_id, @service), class: "btn btn-primary" %></p>

            <p>  <%= button_to 'Supprimer', enterprise_service_path(@service.enterprise_id, @service), method: :delete,
                data: {"turbo_method": :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %></p>
          <% end %>
        </div>
        <div class="col-md-2"></div>
      </div>

    </div>

    <div class="col-6 mt-5">
      <%= cl_image_tag(@service.photo.key,
        width: 500, height: 350, crop: :fit) %>
    </div>
  </div>

</div>

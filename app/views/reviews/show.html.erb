<div class="container">
  <table class="table">
    <tbody>
      <tr>
        <th>Content</th>
        <td><%= @review.content %></td>
      </tr>
      <!-- Ajoutez d'autres détails de réservation au besoin -->
    </tbody>
  </table>


    <%= button_to enterprise_review_path(@review.enterprise_id, @review), method: :delete,
          data: {"turbo_method": :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" do %>
          <i class="fa-solid fa-trash-can"></i>
    <% end %><br/>

  <% if @review.user_id == current_user.id %>
    <%= link_to edit_enterprise_review_path(@review.enterprise_id, @review), class: "btn btn-secondary" do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>
  <% end %>
</div>
